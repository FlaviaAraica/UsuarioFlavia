@model IEnumerable<MvcCrud.Models.Usuario>

@{
    ViewData["Title"] = "Página de Usuarios";
}

<h1>Tabla de Usuarios</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">   Agregar Nuevo Usuario</a>
</p>
<table class="table table-secondary table-bordered table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Clave)
            </th>
            <th>
                <p style ="text-align:center">Acceso</p>
            </th>

        </tr>
    </thead>
    <tbody>



@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Clave)
            </td>

            <td>
                    <a asp-action="Edit" class="btn btn-outline-primary" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" class="btn btn-outline-primary" asp-route-id="@item.Id">Información</a> |
                    <a asp-action="Delete" class="btn btn-outline-primary" asp-route-id="@item.Id">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
